# 定义开发目录
INCDIR = ../include/
OBJDIR = $(CMM2003LIBDIR)

# 定义头文件目录清单
# 顺序应该是：
# 通用模块头文件目录/当前开发环境头文件目录/本工程的头文件目录

INCL = -I $(INCDIR) -I $(CMM2003INCDIR) -I $(CMM2003OPENDIR)/include

#传给脚本的参数
SLP1 = "$*.o"	"$@ $*.o"	$@

# 这个编译开关必须增加
DEFINES = $(OSSPEC)

COMPILE	= $(CC) $(DEFINES) $(INCL) -c
DEPEND	= $(CC) $(INCL) -MM -c

VPATH	= $(OBJDIR)

srcs	= $(wildcard *.c)
objs =	$(patsubst %.c,%.o,$(srcs)) 
deps =	$(patsubst %.o,%.d,$(objs)) 

libs =	baseUIService.a			\
	registerAuditAndApproval.a

all:	makeall		

makeall:	$(objs)			\
		$(libs)

.SUFFIXES:.c.o
.c.o:
	@echo "CC $(DEFINES) $(OBJDIR)$@	$<"
	@$(COMPILE) $< -o $(OBJDIR)$@

$(OBJDIR)%.d:%.c
	@echo "DEP $@	$<"
	@$(DEPEND) $< > $@
	@sh file_substr.x $(SLP1)

registerObjs =	registerOperatorAuditForUI.20130301.o	\
		registerApprovalForUI.20130301.o

ifeq ($(UNION_USE_GCC),1)
registerAuditAndApproval.a:	$(registerObjs) $(deps)
else
registerAuditAndApproval.a:
endif
	$(AR) $(OSSPECPACK) r $(OBJDIR)$@ $(addprefix $(OBJDIR),$(registerObjs))

baseUIServiceObjs =	$(filter-out $(registerObjs) unionBaseUIService.20130301.o,$(objs))

ifeq ($(UNION_USE_GCC),1)
baseUIService.a:	$(baseUIServiceObjs) $(deps)
else
baseUIService.a:
endif
	$(AR) $(OSSPECPACK) r $(OBJDIR)$@ $(addprefix $(OBJDIR),$(baseUIServiceObjs))

ifeq ($(filter $(MAKECMDGOALS),clean install show),)
ifeq ($(UNION_USE_GCC),1)
sinclude $(addprefix $(OBJDIR),$(deps))
endif
endif

includes = 	$(INCDIR)baseUIService.h		\
		$(INCDIR)registerAuditAndApproval.h	

.PHONY: clean install show
install:
	@sh cp_head.x  "$(includes)" $(CMM2003INCDIR)

rmobjs = $(objs) $(deps) $(libs)
clean:
	$(RM) $(addprefix $(OBJDIR),$(rmobjs))

show:
	make -v
	@echo '=============================================================='
	@echo 'srcs	:' $(srcs)
	@echo 'objs	:' $(objs)
	@echo 'deps	:' $(deps)
	@echo 'INCL	:' $(INCL)
	@echo 'COMPILE	:' $(COMPILE)
	@echo 'DEPEND	:' $(DEPEND)
	
