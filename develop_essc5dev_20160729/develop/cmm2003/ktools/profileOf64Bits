# **** 第一部分：定义项目的开发环境 ****

# 定义cmm2003的开发环境
# 定义主开发目录
CMM2003DIR=$HOME
export CMM2003DIR
# 定义交付件目录
UNIONLIBDIR=/cmmLibOf64Bits/
export UNIONLIBDIR
# 头文件交付件目录
CMM2003INCDIR=$UNIONLIBDIR/include
export CMM2003INCDIR
# 目标代码、库交付件目录
CMM2003LIBDIR=$UNIONLIBDIR/lib/
export CMM2003LIBDIR
# 可执行程序交付件目录
CMM2003BINDIR=$UNIONLIBDIR/binLibs
export CMM2003BINDIR
# 版本库交付件目录
CMM2003VERDIR=$UNIONLIBDIR/scoVerLib/
export CMM2003VERDIR
# 可执行工具交付件目录
CMM2003TOOLSDIR=$UNIONLIBDIR/tools/
export CMM2003TOOLSDIR

# 4.x平台的开发环境
ESSC4xPRODUCTHOUSEWARE=/esscLibOf64Bits/2009
ESSC4xINCL=$ESSC4xPRODUCTHOUSEWARE/includeLibs/
export ESSC4xPRODUCTHOUSEWARE ESSC4xINCL

#
export DEVDEPINCDIR=/kmsLibOf64Bits/includeLibs/
# 编译源代码时，使用的编译开关
OSSPEC="-qcpluscmt -g -D _AIX_"
OSSPEC="-g -D _Linux_"
OSSPEC="$OSSPEC -m64"
export OSSPEC

OSSPECLINK="-m64"
OSSPECPACK=""

# 定义编译头文件目录
# DEVINCDIR必须定义
DEVINCDIR="-I ../include -I $CMM2003INCDIR"
export DEVINCDIR

# 连接程序时，使用的操作系统特殊的库
# OSSPECLIBS必须定义
OSSPECLIBS="-lncurses"
export OSSPECLIBS

# **** 第三部分：定义测试环境

# 测试环境主目录
UNIONREC=$HOME
export UNIONREC
# 测试程序所在目录
UNIONTESTBINDIR=$UNIONREC/bin
export UNIONTESTBINDIR
# 运行配置目录
UNIONETC=$UNIONREC/etc
export UNIONETC
# 运行日志目录
UNIONLOG=$UNIONREC/log
export UNIONLOG
# 暂时目录
UNIONTEMP=$UNIONREC/tmp	
export UNIONTEMP

# **** 第三部分：定义结束 ****

PATH=$HOME/envFor64Bits:/sbin:$UNIONLIBDIR/tools:$PATH:

export PATH

export ORACLE_BASE=/opt/oracle
export ORACLE_HOME=$ORACLE_BASE/product/10.2.0/db_1
export ORACLE_SID=orcl2
export PATH=$PATH:$ORACLE_HOME/bin

export UNION_DBNAME=orcl12
export UNION_DBUSER=uniondeskey
export UNION_DBPASSWD=uniondeskey


PS1='${PWD}>'
alias l='ls -l'
alias rm='rm -i'
set -o vi

