# 2002/8/27, Wolfgang Wang, 增加了：
# 				UnionTCPIPSvr1.3.a
# 				UnionSocket1.3.a
# 2002/12/18, Wolfgang Wang，增加了：
#				UnionTCPIPSvr1.5.a

COMMDIR = $(UNIONLIBDIR)/
COMMLIBDIR = $(COMMDIR)lib64bits/
COMMINCDIR = $(COMMDIR)include/
COMMBINDIR = $(COMMDIR)bin64bits/
COMMETCDIR = $(COMMDIR)etc/
COMMSAMDIR = $(COMMDIR)sample/
COMMOBJDIR = $(COMMDIR)obj64bits/

HOMEDIR = $(UNIONLIBDIR)/unionSocket/
LIBDIR = $(HOMEDIR)lib64bits/
BINDIR = $(HOMEDIR)bin64bits/
INCDIR = $(HOMEDIR)include/

INCL = +DD64 -I $(HOMEDIR)include -I $(COMMINCDIR)

all:	UnionSocket1.2.a	\
	UnionTCPIPSvr1.2.a	\
	UnionSocket1.3.a	\
	UnionTCPIPSvr1.3.a	\
	UnionSocket1.4.a	\
	UnionTCPIPSvr1.4.a	\
	UnionTCPIPSvr1.5.a	\
	UnionSocket2.0.a	\
	UnionTCPIPSvr2.0.a	\
	LibProduct		\
	rmobjs

.SUFFIXES:.c.o
.c.o:
	$(CC) $(INCL) $(DEFINES) -c $*.c

objs0112 = UnionSocket1.2.o
UnionSocket1.2.a:	$(objs0112)
			ar rv UnionSocket1.2.a $(objs0112)

objs0212 = UnionTCPIPSvr1.2.o UnionSocket1.2.o
UnionTCPIPSvr1.2.a:	$(objs0212)
			ar rv UnionTCPIPSvr1.2.a $(objs0212)

objs0113 = UnionSocket1.3.o
UnionSocket1.3.a:	$(objs0113)
			ar rv UnionSocket1.3.a $(objs0113)

objs0213 = UnionTCPIPSvr1.3.o UnionSocket1.3.o
UnionTCPIPSvr1.3.a:	$(objs0213)
			ar rv UnionTCPIPSvr1.3.a $(objs0213)

objs0214 = UnionSocket1.4.o
UnionSocket1.4.a:	$(objs0214)
			ar rv UnionSocket1.4.a $(objs0214)

objs0214 = UnionTCPIPSvr1.3.o UnionSocket1.4.o
UnionTCPIPSvr1.4.a:	$(objs0214)
			ar rv UnionTCPIPSvr1.4.a $(objs0214)

objs0215 = UnionTCPIPSvr1.4.o UnionSocket1.4.o
UnionTCPIPSvr1.5.a:	$(objs0215)
			ar rv UnionTCPIPSvr1.5.a $(objs0215)

objs0120 = UnionSocket2.0.o
UnionSocket2.0.a:	$(objs0120)
			ar rv UnionSocket2.0.a $(objs0120)

objs0220 = UnionTCPIPSvr2.0.o UnionSocket2.0.o
UnionTCPIPSvr2.0.a:	$(objs0220)
			ar rv UnionTCPIPSvr2.0.a $(objs0220)

LibProduct:		$(null)
			cp UnionSocket1.2.a 		$(COMMLIBDIR)
			cp $(INCDIR)UnionSocket.h 	$(COMMINCDIR)
			mv UnionSocket1.2.a 		$(LIBDIR)
			cp UnionTCPIPSvr1.2.a 		$(COMMLIBDIR)
			mv UnionTCPIPSvr1.2.a 		$(LIBDIR)
			cp UnionSocket1.3.a 		$(COMMLIBDIR)
			mv UnionSocket1.3.a 		$(LIBDIR)
			cp UnionTCPIPSvr1.3.a 		$(COMMLIBDIR)
			mv UnionTCPIPSvr1.3.a 		$(LIBDIR)
			cp UnionSocket1.4.a		$(COMMLIBDIR)
			mv UnionSocket1.4.a		$(LIBDIR)
			cp UnionSocket2.0.a		$(COMMLIBDIR)
			mv UnionSocket2.0.a		$(LIBDIR)
			cp UnionTCPIPSvr1.4.a 		$(COMMLIBDIR)
			mv UnionTCPIPSvr1.4.a 		$(LIBDIR)
			cp UnionTCPIPSvr1.5.a 		$(COMMLIBDIR)
			mv UnionTCPIPSvr1.5.a 		$(LIBDIR)
			cp UnionTCPIPSvr2.0.a 		$(COMMLIBDIR)
			mv UnionTCPIPSvr2.0.a 		$(LIBDIR)
			cp UnionSocket1.2.o		$(COMMOBJDIR)
			cp UnionSocket1.3.o		$(COMMOBJDIR)
			cp UnionSocket1.4.o		$(COMMOBJDIR)
			cp UnionSocket2.0.o		$(COMMOBJDIR)
			cp UnionTCPIPSvr1.2.o		$(COMMOBJDIR)
			cp UnionTCPIPSvr1.3.o		$(COMMOBJDIR)
			cp UnionTCPIPSvr1.4.o		$(COMMOBJDIR)
			cp UnionTCPIPSvr2.0.o		$(COMMOBJDIR)
			
rmobjs:			$(null)
			rm *.o
